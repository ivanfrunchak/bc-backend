{
    "manifest_version": 3,
    "name": "CRASH",
    "version": "1.0",
    "description": "Auto betting for CRASH",
    "permissions": [
        "activeTab",
        "storage",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://bc.game/game/crash"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}